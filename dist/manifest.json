{
    "manifest_version": 2,
    "name": "Wanderland",
    "description": "An app made by travellers for travellers. See maps of places mentioned on webpages.",
    "version": "1.0.1",
    "author": "Josiah Coad, Chinmay Phulse, Amir Karimloo",
    "content_scripts": [
        {
            "css": [],
            "js": ["lib/jquery.min.js", "lib/bootstrap.min.js", "js/contentBundle.js"],
            "matches": ["<all_urls>"]
        }
    ],
    "background": {
        "scripts": ["js/backgroundBundle.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "images/icon48.png",
        "default_title": "Wanderland",
        "default_popup": "html/popup.html"
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "permissions": ["activeTab", "declarativeContent", "storage", "contextMenus"],
    "content_security_policy": "script-src 'self' https://maps.googleapis.com https://maps.gstatic.com; object-src 'self'"
}
